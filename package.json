{
  "name": "chatgpt-client",
  "version": "1.2.1",
  "description": "A Desktop client made with electron for ChatGPT",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "webpack --config webpack.conf.js && electron .",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.evermine.chatgptclient",
    "productName": "ChatGPT - Client",
    "files": [
      "index.js",
      "app",
      "icon.png"
    ],
    "publish": {
      "provider": "github"
    },
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "electron-log": "^5.0.1",
    "electron-updater": "^6.1.7",
    "request": "^2.88.2"
  }
}
